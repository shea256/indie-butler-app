{
  "name": "indie-buttler",
  "version": "0.0.0",
  "description": "Indie Buttler App",
  "manifest_version": 2,
  "permissions": [
    "background",
    "unlimitedStorage",
    "*://*.facebook.com/*",
    "*://*.twitter.com/*"
  ],
  "options_page": "/data/html/options.html",
  "background": {
    "page": "/data/html/background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.twitter.com/*"
      ],
      "js": [
        "/lib/vendor/jquery.js",
        "/lib/interceptors/twitter.js",
        "/lib/interceptors/facebook.js"
      ],
      "all_frames": true
    }
  ],
  "app": {
    "launch": {
      "local_path": "/data/html/home.html"
    }
  }
}